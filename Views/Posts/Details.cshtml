@using MVC_Blog.Services

@model MVC_Blog.Models.Post
@inject IFileService _fileService

@{
    ViewData["Title"] = "Details";
}

<header class="masthead" style="background-image: url('@_fileService.DecodeImage(Model.ImageData, Model.ContentType)')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>@Html.DisplayFor(model => model.Title)</h1>
                    <span class="subheading">@Html.DisplayFor(model => model.Abstract)</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">


    <h1>Details</h1>

    <div>
        <h4>Post</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Abstract)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Abstract)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Created)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Updated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Updated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishState)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PublishState)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog)
